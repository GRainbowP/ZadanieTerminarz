<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZadanieTerminarz.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label x:Name="terminTitle" Text="" FontSize="Title" FontAttributes="Bold" HorizontalTextAlignment="Center" Padding="10" />
            <Label x:Name="terminDesc" Text="" HorizontalOptions="Start" />

            <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
                <Label x:Name="terminDate" Text="" HorizontalTextAlignment="Center" TextColor="Gray" />
                <Label x:Name="terminHour" Text="" HorizontalTextAlignment="Center" TextColor="Gray" />
                <HorizontalStackLayout Spacing="10">
                    <Button x:Name="beforeTermin" Clicked="beforeTermin_Clicked" Text="Poprzedni" />
                    <Button x:Name="nextTermin" Clicked="nextTermin_Clicked" Text="Następny" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
